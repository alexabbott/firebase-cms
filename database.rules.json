{
  "rules": {
    ".read": true,
    ".write": true,
    "categories": {
      ".indexOn": "slug"
    },
    "admins": {
      ".indexOn": "email"
    },
    "approvals/products": {
      ".indexOn": "updatedBy"
    },
    "orders": {
      ".indexOn": "uid"
    },
    "products": {
      ".indexOn": ["published", "category", "rdateAdded"]
    },
    "posts": {
      ".indexOn": "published"
    },
    "stripe_customers": {
      "$uid": {
        ".read": "$uid === auth.uid",
        "sources": {
          "$chargeId" : {
            ".write": "$uid === auth.uid",
            "token": { ".validate": "newData.isString()" },
            "$other": { ".validate": false }
          }
        },
        "charges": {
          "$sourceId" : {
            ".write": "$uid === auth.uid",
            "source": { ".validate": "newData.isString()" },
            "amount": { ".validate": "newData.isNumber()" },
            "$other": { ".validate": false }
          }
        }
      }
    }
  }
}
